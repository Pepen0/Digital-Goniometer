<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_background_gradient"
    tools:context=".LeftArmRotation">

    <TextView
        android:id="@+id/textViewLeftArmAbduction"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-black"
        android:text="LEFT ARM ROTATION"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="476dp"
        android:text="START"
        android:textSize="18sp"
        android:background="@drawable/circular_button_start"
        app:backgroundTint="@null"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLeftArmAbduction"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/SaveButton"
        android:visibility="visible"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Save Left Arm Rotation"
        android:textSize="20sp"
        android:background="@drawable/custom_button2"
        app:backgroundTint="@null"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Roll"
        app:layout_constraintVertical_bias="0.371" />

    <TextView
        android:id="@+id/AbductionM"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:text="Left Rotation"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StartButton"
        app:layout_constraintVertical_bias="0.144" />

    <TextView
        android:id="@+id/Roll"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="272dp"
        android:text="Roll"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AbductionM" />

</androidx.constraintlayout.widget.ConstraintLayout>
